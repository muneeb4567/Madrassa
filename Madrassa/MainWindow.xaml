                                        <Button x:Name="btnclasscreate" Click="btnclasscreate_Click" Grid.Row="1" Margin="10,10,100,10"  Width="150" Style="{DynamicResource StylishButtonStyle}" Content="جمع کریں">
                                            <Button.ToolTip>
                                                <TextBlock>مولانا صاحب یہ بٹن نئی کلاس بنانے کے لیے ہے</TextBlock>
                                            </Button.ToolTip>
                                        </Button>
                                        <TextBox x:Name="txtclass" Margin="10"  TextAlignment="Right" MinWidth="150"></TextBox>
