                                        </DataGrid>
                                        <Button x:Name="examdelete" Click="examdelete_Click" Margin="10">منتخب امتحان حذف کریں</Button>
                                    </StackPanel>
                                    
                                </Grid>
                            </Grid>
                            
                        </ScrollViewer>

                    </TabItem>

                </TabControl>

            </TabItem>
            <TabItem Header="file">
                <Button Content="Export Student Data" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Click="ExportButton_Click"/>
