                                    </StackPanel>
                                </Border>
                                <Border Grid.Row="1" BorderBrush="BlueViolet"  CornerRadius="3" BorderThickness="4" Margin="10">
                                    <StackPanel Grid.Row="0" HorizontalAlignment="Center" Orientation="Horizontal">
                                        <Button x:Name="btnsubject" Click="btnsubjectcreate" Grid.Row="1" Margin="10,10,100,10"  Width="150" Style="{DynamicResource StylishButtonStyle}" Content="جمع کریں">
                                            <Button.ToolTip>
                                                <TextBlock>مولانا صاحب یہ بٹن نئی کتاب بنانے کے لیے ہے</TextBlock>
                                            </Button.ToolTip>
                                        </Button>
                                        <TextBox x:Name="txtsubject"  Margin="10"  TextAlignment="Right" MinWidth="150"></TextBox>
                                        <Label  Grid.Column="5" Margin="10"  MinWidth="150">* یہاں کتاب کا نام درج کریں</Label>
                                    </StackPanel>
                                </Border>
                                <Border Grid.Row="2" BorderBrush="BlueViolet"  CornerRadius="3" BorderThickness="4" Margin="10">
                                    <ScrollViewer HorizontalScrollBarVisibility="Visible">
                                        <StackPanel  HorizontalAlignment="Center" Orientation="Horizontal">
                                            <Button x:Name="btnsubjectmarks" Click="btnsubjectmarks_Click" Margin="10,10,10,10"  Width="150" Style="{DynamicResource StylishButtonStyle}" Content="جمع کریں">
                                                <Button.ToolTip>
                                                    <TextBlock>یہ بٹن کسی کتاب کو کلاس میں تفویض کرنے کے لئے ہے</TextBlock>
                                                </Button.ToolTip>
                                            </Button>
                                            <ComboBox x:Name="txtclassid" Margin="10"  MinWidth="150">

                                            </ComboBox>
                                            <Label  Grid.Column="5" Margin="10"  MinWidth="150">* کلاس کا نام منتخب کریں</Label>
                                            <ComboBox x:Name="txtsubjectid" Margin="10"   MinWidth="150"></ComboBox>
                                            <Label  Grid.Column="5" Margin="10"  MinWidth="150">* کتاب کا نام منتخب کریں</Label>
                                            <TextBox x:Name="txtmaxmerks" Margin="10"  TextAlignment="Right" MinWidth="150"></TextBox>
                                            <Label  Grid.Column="5" Margin="10"  MinWidth="150">*  کتاب کے کل نمبرات لکھے</Label>
                                        </StackPanel>
                                    </ScrollViewer>
                                </Border>
                                <Border Grid.Row="3" BorderBrush="BlueViolet"  CornerRadius="3" BorderThickness="4" Margin="10">
                                    <StackPanel  HorizontalAlignment="Center" Orientation="Horizontal">
                                        <Button x:Name="btnexamcreate" Click="btnexamcreate_Click" Margin="10"  Width="150" Style="{DynamicResource StylishButtonStyle}" Content=" جمع کری">
                                            <Button.ToolTip>
                                                <TextBlock>یہ بٹن نئے امتحان کے لئے ہے</TextBlock>
                                            </Button.ToolTip>
                                        </Button>
                                        <TextBox  x:Name="txtexamname" TextAlignment="Right" MinWidth="150"></TextBox>
                                        <Label   Margin="10"  MinWidth="150">* امتحان کا نام درج کریں</Label>

                                        <DatePicker x:Name="txtexamdate" Margin="10" MinWidth="150"></DatePicker>
                                        <Label  Grid.Column="5" Margin="10"  MinWidth="150">* امتحان کی تاریخ درج کریں</Label>
                                    </StackPanel>
                                </Border>
                                <Grid Grid.Row="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel >
                                        
                                            <Label>کل کتابیں</Label>
                                            <DataGrid x:Name="booksdg" Margin="10" AutoGenerateColumns="False">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="کتابوں کے نام" Binding="{Binding subjectname}"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                            <Button Margin="10" Click="subjectdelete">منتخب موضوع حذف کریں</Button>
                                        
                                    </StackPanel>
                                    <StackPanel Grid.Row="1" Grid.Column="0">
                                        <Label>کل درجات</Label>
                                        <DataGrid x:Name="classesdg" Margin="10" AutoGenerateColumns="False">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="درجات" Binding="{Binding Path=classname}"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <Button x:Name="deleteclassid" Click="deleteclassid_Click" Margin="10">منتخب کلاس کو حذف کریں</Button>
                                    </StackPanel>
                                    <StackPanel Grid.Row="1" Grid.Column="10">
                                        <Label>مضامین کے نمبر اور درجہ</Label>
                                        <DataGrid x:Name="marksdg" Margin="10" AutoGenerateColumns="False">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="درجہ" Binding="{Binding Path=classid}"/>
