                            <TextBox x:Name="obtmarks" Grid.Row="3" Margin="10" Grid.Column="2" MaxWidth="200"></TextBox>
                            <Label Grid.Row="3" Grid.Column="3">حاصل شدہ نمبر</Label>
                            <TextBox x:Name="deletebtn_examid"  Grid.Column="1" Grid.Row="4" Margin="10"></TextBox>
                            <Button Grid.Row="4" Margin="10" Click="deletebtn_exam_Click">delete</Button>
                            <Button x:Name="submit_exam" Margin="10" Click="submit_exam_Click" Grid.Row="4"  Grid.Column="2">submit</Button>
                            <DataGrid x:Name="namedgrid" Margin="10" Grid.Row="5" Grid.Column="2">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="رجسٹریشن نمبر" Binding="{Binding Path=id}"/>
                                    <DataGridTextColumn Header="طالب علم کا نام" Binding="{Binding Path=name}"/>
                                    <DataGridTextColumn Header="درجہ" Binding="{Binding Path=darja}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            <DataGrid x:Name="resultexam" Grid.Row="5" Margin="10" Grid.ColumnSpan="2" AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="رجسٹریشن نمبر" Binding="{Binding id}"/>
                                    <DataGridTextColumn Header="امتحان کا نام" Binding="{Binding studentid}"/>
                                    <DataGridTextColumn Header="کلاس کا نام" Binding="{Binding exam}"/>
                                    <DataGridTextColumn Header="کلاس کا نام" Binding="{Binding class}"/>
                                    <DataGridTextColumn Header="کتاب کا نام" Binding="{Binding subject}"/>
                                    <DataGridTextColumn Header="حاصل کردہ نمبرات" Binding="{Binding obtmarks}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            <StackPanel Grid.Column="4" Orientation="Horizontal">
                                <ComboBox x:Name="classfilter_exam" MinWidth="70" Margin="10"></ComboBox>
                                <Label>درجہ</Label>
                                <TextBox x:Name="yearfilter_exam" MinWidth="70" Margin="10"></TextBox>
                                <Label>سال</Label>
                                <Button Width="100" Click="Button_Click_5" Margin="10" >اسے تلاش کریں</Button>
                            </StackPanel>
                            <DataGrid x:Name="filterstd_exam" Margin="10" Grid.Column="4" Grid.Row="1" AutoGenerateColumns="False" Grid.RowSpan="5">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding id}"/>
                                    <DataGridTextColumn Header="نام" Binding="{Binding name}"/>
                                    <DataGridTextColumn Header="والد کا نام" Binding="{Binding fathername}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            
                        </Grid>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header="امتحان تخلیق کریں ">
                        <ScrollViewer>
                            <Grid >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
